<p id="notice"><%= notice %></p>

<h1>Listing Points Of Interest</h1>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>City</th>
      <th>Country</th>
      <th>Zip</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Opening hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @points_of_interest.each do |point_of_interest| %>
      <tr>
        <td><%= point_of_interest.key %></td>
        <td><%= point_of_interest.latitude %></td>
        <td><%= point_of_interest.longitude %></td>
        <td><%= point_of_interest.city %></td>
        <td><%= point_of_interest.country %></td>
        <td><%= point_of_interest.zip %></td>
        <td><%= point_of_interest.address %></td>
        <td><%= point_of_interest.contact %></td>
        <td><%= point_of_interest.opening_hours %></td>
        <td><%= link_to 'Show', point_of_interest %></td>
        <td><%= link_to 'Edit', edit_point_of_interest_path(point_of_interest) %></td>
        <td><%= link_to 'Destroy', point_of_interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

